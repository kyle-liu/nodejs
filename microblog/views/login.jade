extends layout
block content
    form.form-horizontal(action="/dologin", method="post")
        fieldset
            legend 用户登录
            div.control-group
                label.control-label(for="username") 用户名
                div.controls
                    input#username.input-xlarge(type="text", name="username")
                    p.help-block 你的账户名称，用户登录和显示
            div.control-group
                label.control-label(for="password") 口令
                div.controls
                    input#password.input-xlarge(type="password" , name="password")
            div.form-actions
                button.btn.btn-primary(type="submit") 登录
            -if (error)
                h5 #{error}

